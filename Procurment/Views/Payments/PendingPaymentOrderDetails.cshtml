<!--use CompletePaymentViewModel to get data from all three BankAccount,Order and Payment models-->
@model Procurment.ViewModels.CompletePaymentViewModel

@{
    ViewBag.Title = "PendingPaymentOrderDetails";
}

<h2><font color="white"><strong>Pending Payment Order Details</strong></font></h2>

<div class="container text-center">
    <button class="btn btn-light btn-active">
        @Html.ActionLink("Pending Payments", "PendingPaymentOrderDetails", "Payments", new { @class = "my-class" })
    </button>
    <button class="btn btn-info btn-active">
        @Html.ActionLink("Successfull Payments", "SuccessfullPaymentList", "Payments", new { @class = "my-class" })
    </button>
</div>

@using (Html.BeginForm("Create", "Payments"))
{
    <div class="panel-default">
        <div class="panel-body" style="background-color:antiquewhite">

            <div class="form-group">
                @Html.LabelFor(pendingOrder => pendingOrder.Order.OrderId)
                @Html.TextBoxFor(pendingOrder => pendingOrder.Order.OrderId, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(pendingOrder => pendingOrder.Order.Supplier)
                @Html.TextBoxFor(pendingOrder => pendingOrder.Order.Supplier, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(pendingOrder => pendingOrder.Payment.AccountNo)
                @Html.DropDownListFor(pendingOrder => pendingOrder.Payment.AccountNo,new SelectList(Model.BankAccounts,"AccountNo", "AccountNo"),"Select Bank Account", new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(pendingOrder => pendingOrder.Order.TotalAmount)
                @Html.TextBoxFor(pendingOrder => pendingOrder.Order.TotalAmount, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-success"><a href="PendingPaymentOrderItems">View</a></button>
            <button type="submit" class="btn btn-danger">Pay Now</button>
            <button type="submit" class="btn btn-light"><a href="PendingPaymentsList">Back</a></button>
            
        </div>
    </div>

}
